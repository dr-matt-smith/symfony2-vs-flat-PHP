{% extends "layout.html.twig" %}

{# ----------------------------------- #}
{% block title %} List of Posts {% endblock %}









{# ----------------------------------- #}
{% block body %}
<h1>List of Posts</h1>
<ul>
{% for post in posts %} 
	<li>
		<a href="./show?id={{ post.id }}">
		{{ post.title }}
		</a> 
	</li>
{% endfor %} 
</ul>
{% endblock %}